{% set mod = {
  cover: "object-cover",
  contain: "object-contain",
} %}

{% if data.desktopBig or data.desktop or data.tablet %}
  <picture class="w-full h-full {{class}}">
    {% if data.desktopBig %}
      <source srcset="{{ data.desktopBig }}" media="(min-width: 1920px)">
    {% endif %}
    {% if data.desktop %}
      <source srcset="{{ data.desktop }}" media="(min-width: 1280px)">
    {% endif %}
    {% if data.tablet %}
      <source srcset="{{ data.tablet }}" media="(min-width: 768px)">
    {% endif %}
    <img
      {% if data.src %}
        src="{{ data.src }}"
      {% endif %}
      {% if data.alt %}
        alt="{{ data.alt }}"
      {% endif %}
      {% if not noLazy %}
        loading="lazy"
      {% endif %}
      {% if data.title %}
        title="{{ data.title }}"
      {% endif %}
      class="w-full h-full {{mod[variant|default('cover')]}}"
      {{ attributes }}
    >
  </picture>
{% else %}
  <img
    class="w-full h-full {{mod[variant|default('cover')]}} {{class}}"
    src="{{ data.src }}"
    {% if data.alt %}
      alt="{{ data.alt }}"
    {% endif %}
    {% if not noLazy %}
      loading="lazy"
    {% endif %}
    {% if data.title %}
      title="{{ data.title }}"
    {% endif %}
    {{ attributes }}
  >
{% endif %}
