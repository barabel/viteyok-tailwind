{
  "types": ["gsap/types"],
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["src/views/*"]
    },
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["./src/views/shared/lib/gsap-bonus", "./vite.config.ts", "./app.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
